/**
 * Icon bar menu.
 */

menu(IconBarMenu, "Puzzles")
{
	item("Info") {
		d_box(ProgInfo);
	}
	item("Help");
	item("Quit");
}

/**
 * Game window menu.
 */

menu(GameWindowMenu, "")
{
	indirected(1);

	item("Type") {
		dotted;
	}
	item("New Game");
	item("Restart");
	item("Solve") {
		dotted;
	}
	item("Undo    F8");
	item("Redo    F9");
}