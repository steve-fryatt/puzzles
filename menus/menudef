/**
 * Icon bar menu.
 */

menu(IconBarMenu, "Puzzles")
{
	item("Info") {
		d_box(ProgInfo);
	}
	item("Help...");
	item("Quit");
}

/**
 * Index window menu.
 */

menu(IndexWindowMenu, "Puzzles")
{
	item("Large icons");
	item("Small icons") {
		dotted;
	}
	item("Puzzle") {
		submenu(IndexWindowPuzzleMenu);
	}
}

/* Puzzle submenu. */

menu(IndexWindowPuzzleMenu, "Puzzle")
{
	item("Help...");
}

/**
 * Game window menu.
 */

menu(GameWindowMenu, "")
{
	indirected(1);

	item("Game") {
		submenu(GameWindowGameSubmenu);
		dotted;
	}

	item("Type");
	item("Specific game...");
	item("Random seed...") {
		dotted;
	}
	item("Undo            F8");
	item("Redo            F9") {
		dotted;
	}
	item("Preferences...");
	item("Help...");
}

menu(GameWindowGameSubmenu, "Game") {
	item("Save") {
		d_box(SaveAs) {
			warning;
		}
	}
	item("Copy as text") {
		dotted;
	}
	item("New");
	item("Restart");
	item("Solve");
}